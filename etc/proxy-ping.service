[Unit]
Description=Tool for pinging hosts behind proxies
After=network.target

[Service]
Type=forking
ExecStart=/usr/local/bin/run_little_brother.py --daemonize --pidfile=/run/proxy-ping/proxy-ping.pid --config=/etc/proxy-ping/proxy-ping.config --logdir=/var/log/proxy-ping
ExecStop=/usr/local/bin/run_little_brother.py  --pidfile=/run/proxy-ping/proxy-ping.pid --kill
IgnoreSIGPIPE=false
PIDFile=/run/proxy-ping/proxy-ping.pid
RuntimeDirectory=proxy-ping
KillMode=process
PermissionsStartOnly=true
User=proxy-ping
Group=proxy-ping
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target
